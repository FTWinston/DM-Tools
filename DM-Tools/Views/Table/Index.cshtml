@{
    ViewBag.Title = "Table";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <ul id="discussion"></ul>
</div>
@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var table = $.connection.tableHub;

            // Create a function that the hub can call back to display messages.
            table.client.showChatMessage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong>: ' + htmlEncode(message) + '</li>');
            };

            table.client.showMessage = function (message) {
                $('#discussion').append('<li><em>' + htmlEncode(message) + '</em></li>');
            };

            // Get the user name and store it to prepend to messages.
            var userName = prompt('Enter your name:', '');

            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                table.server.join(@ViewBag.TableID, userName);

                $('#sendmessage').click(function () {
                    table.server.say(@ViewBag.TableID, $('#message').val());
                    $('#message').val('').focus();
                });
            });
        });

        function htmlEncode(value) {
            return $('<div />').text(value).html();
        }
    </script>
}