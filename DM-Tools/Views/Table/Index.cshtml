@{
    ViewBag.Title = "Table";
}
<!--
<h2>@ViewBag.Title</h2>
-->
<div class="container">
    <ul id="discussion"></ul>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
</div>
@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        $(function () {
            var table = $.connection.tableHub;

            table.client.showChatMessage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong>: ' + htmlEncode(message) + '</li>');
            };

            table.client.showMessage = function (message) {
                $('#discussion').append('<li><em>' + htmlEncode(message) + '</em></li>');
            };

            table.client.showDiceRoll = function (user, roll) {
                $('#discussion').append('<li><em>' + htmlEncode(user) + ' rolls: ' + roll + '</em></li>');
            };
            
            table.client.setupUi = function (isDM) {
                console.log(isDM ? "You are the DM" : "You are not the DM");
            };

            $('#message').focus();
            
            $.connection.hub.start().done(function () {
                table.server.join(@ViewBag.TableID, prompt('Enter your name:', ''));

                $('#sendmessage').click(function () {
                    var msg = $('#message').val().trim();
                    if (msg != '')
                        table.server.say(@ViewBag.TableID, msg);
                    $('#message').val('').focus();
                });
            });

            $('#message').keypress(function(e) {
                if(e.keyCode==13)
                    $('#sendmessage').click();
            });
        });

        function htmlEncode(value) {
            return $('<div />').text(value).html();
        }
    </script>
}